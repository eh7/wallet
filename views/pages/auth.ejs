<%- include page_head %>


 <div id="addresses" style="border:0px solid red;margin:0px;padding:0;">
  <div style="display:inline-block;border:1px solid grey;text-align:left; padding:5px; margin-top:5px; border-radius: 5px; width:100%;">

  <h5>Please enter a passphrase to secure your wallet</h5>

  <% errors.forEach(function(obj) { %>
    <ul class="text-warning">
    <li><%= obj %></li>
    </ul>
  <% }); %>

  <form method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Passphrase</label>
      <input type="password" class="form-control" id="passphrase" name="passphrase" aria-describedby="passphraseHelp" placeholder="Enter passphrase">
      <small id="passphraseHelp" class="form-text text-danger">Keep a note of this or you will loose access to your wallet!</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassphraseCheck">Passphrase Check</label>
      <input type="password" class="form-control" id="exampleInputPassphraseCheck" name="passphraseCheck" placeholder="Passphrase check">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  </div>
 </div>



</div>
</div>

<%- include page_foot %>
