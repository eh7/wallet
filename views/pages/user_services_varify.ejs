<%- include page_head %>

<%- include menu_apps %>

<h4>Wallet User Services</h4>

<div style="text-align:left;">
<% for(var i=0; i<services.length; i++) { %>
<a href="<%= services[i].url %>"><%= services[i].name %></a><br>
<% } %>

<form id="myData" method="POST">

  <div class="form-row">
    <small class="form-text text-muted">This data will not be stored, it is used to  create a cryptographic hash of the data, so people/organisation can varify the data you share with them has been validated.</small>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="full_name">Full Name</label>
      <input type="text" class="form-control" id="full_name" placeholder="Enter Full Name" name="full_name" value="<% if(locals.full_name){ %><%= full_name %><% } %>" required>
    </div>
    <div class="form-group col-md-6">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="help" name="email" value="<% if(locals.email){ %><%= email %><% } %>" placeholder="Enter email" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress" name="address" value="<% if(locals.address){ %><%= address %><% } %>" placeholder="1234 Main St" required>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address 2</label>
    <input type="text" class="form-control" id="inputAddress2" name="address2" value="<% if(locals.address2){ %><%= address2 %><% } %>" placeholder="Apartment, studio..." >
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">City</label>
      <input type="text" class="form-control" id="inputCity" name="city" value="<% if(locals.city){ %><%= city %><% } %>" required>
    </div>
    <div class="form-group col-md-4">
      <label for="inputRegion">Region</label>
      <input type="text" id="inputRegion" class="form-control" name="region" value="<% if(locals.region){ %><%= region %><% } %>" required>
    </div>
    <div class="form-group col-md-2">
      <label for="inputPostcode">Postcode</label>
      <input type="text" class="form-control" id="inputPostcode" name="postcode" value="<% if(locals.postcode){ %><%= postcode %><% } %>" required>
    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="submit">Submit</button>
</form>





</div>

</div>
</div>

