<%- include page_head %>

<%- include menu_apps %>

<h4>Wallet User Services</h4>

<div style="text-align:left;">
<% for(var i=0; i<services.length; i++) { %>
<a href="<%= services[i].url %>"><%= services[i].name %></a><br>
<% } %>

<form id="myData" method="POST">

  <% if(locals.errors) { %>
    <% for(var i=0; i<errors.length; i++) { %>
      <%= errors[i] %><br>
    <% } %>
  <% } %>

  <div class="form-row">
    <small class="form-text text-muted">This data will not be stored, it is used to  create a cryptographic hash of the data, so people/organisation can varify the data you share with them has been validated.</small>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="full_name">Full Name</label>
      <input type="text" class="form-control" id="full_name" placeholder="Enter Full Name" name="full_name" value="<% if(locals.full_name){ %><%= full_name %><% } %>" >
    </div>
    <div class="form-group col-md-6">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="help" name="email" value="<% if(locals.email){ %><%= email %><% } %>" placeholder="Enter email" >
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" id="inputAddress" name="address" value="<% if(locals.address){ %><%= address %><% } %>" placeholder="1234 Main St" >
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address 2</label>
    <input type="text" class="form-control" id="inputAddress2" name="address2" value="<% if(locals.address2){ %><%= address2 %><% } %>" placeholder="Apartment, studio..." >
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity" class="input required">City</label>
      <input type="text" class="form-control" id="inputCity" name="city" value="<% if(locals.city){ %><%= city %><% } %>" >
    </div>
    <div class="form-group col-md-4">
      <label for="inputRegion">Region</label>
      <input type="text" id="inputRegion" class="form-control" name="region" value="<% if(locals.region){ %><%= region %><% } %>" >
    </div>
    <div class="form-group col-md-2">
      <label for="inputPostcode">Postcode</label>
      <input type="text" class="form-control" id="inputPostcode" name="postcode" value="<% if(locals.postcode){ %><%= postcode %><% } %>" >
    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="submit">Submit</button>
</form>





</div>

</div>
</div>

<%- include page_foot %>

<script type="text/javascript">
$(document).ready(function(){

  $('#myData lable.required').append('&nbsp;<strong>*</strong>&nbsp;');

  $("#myData").validate({
                          rules: {
                            full_name: "required",
                            email: { 
                              required:true,
                              email:true
                            },
                            address: "required",
                            city: "required",
                            region: "required",
                            postcode: {
                              required: true,
                              minlength: 6,
                              maxlength: 9,
                            }
                          },
                          messages: {
                            full_name: "<small class=\"text-warning\">Enter your full name</small>",
                            email: {
                              required:"<small class=\"text-warning\">Enter your email</small>",
                              email:"<small class=\"text-warning\">Email format invalid</small>",
                            },
                            address: "<small class=\"text-warning\">Enter your address line 1</small>",
                            city: "<small class=\"text-warning\">Enter your city, town, or village</small>",
                            region: "<small class=\"text-warning\">Enter your region</small>",
                            postcode: "<small class=\"text-warning\">Enter your postcode</small>",
                          },
                        });
/*
                          messages: {
                            full_name: "Enter your full name"
                            email: "Enter your email",
                            city: "Enter your city, tyown, or village",
                          }
*/

});
</script>
