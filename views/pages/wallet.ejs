<%- include page_head %>

<%- include menu_wallet %><br/>

<% if (locals.done_txhash) { %>
  <div style="display:inline-block;border:1px solid grey;text-align:left; padding:5px; border-radius: 5px; width:100%; margin-bottom:5px; ">
  <h4>Transaction Complete, details:</h4>
  <% done_txhash.forEach(function(obj) { %>
    <%= obj.label %>: <%= obj.value %><br>
  <% }) %>
  </div>
  <br>
<% } %>

<div id="no_results" class="alert alert-warning" role="alert" style="display:none; display:inline-block;border:1px solid grey;text-align:center; padding:5px; margin-top:5px; border-radius: 5px; width:100%;">No results</div>

 <div id="addresses" style="border:0px solid red;margin:0px;padding:0;">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav" style='list-style-type: none; margin: 0; padding: 0;'>
    <li class="nav-item" style='display: inline;'> <a class="nav-link" href="/wallet?add=true">Add Address</a>  </li>
    <li class="nav-item" style='display: inline;'> <a class="nav-link" href="/wallet?del=true">Remove Address</a> </li>
    </ul>
    </div>
  </nav>

  <div style="display:inline-block;border:1px solid grey;text-align:left; padding:5px; border-radius: 5px; width:100%;">
    <img style="float:right;" src="<%= qrcode %>">
    <span class="title">HD Wallet Details</span>
    <ul style="list-style-type:none; margin:0 auto; overflow:auto;">
<!--
    <li> Phrase: "<%= phrase %>" </li>
//-->
    <li class="address"> Address: <%= address %> </li>
    <li class="balance"> Balance: <%= balance %> ETH</li>
    <li> <a href="/wallet/send?addr=<%= address %>&bal=<%= balance %>">send</a> </li>
    <li> <a href="/wallet/txs?addr=<%= address %>">view tx history</a> </li>
    </ul>
  </div>
  <br>


<% keys.forEach(function(obj) { %>
  <div style="display:inline-block;border:1px solid grey;text-align:left; padding:5px; margin-top:5px; border-radius: 5px; width:100%;">
  <img style="float:right;" src="<%= obj.qrcode %>">
  <span class="title">HD Wallet <%= obj.count %> Details</span></br>
  <ul style="list-style-type:none; margin:0 auto; overflow:auto;">
    <li class="address"> Address: <%= obj.address %>  </li>
    <li class="balance"> Balance: <%= obj.balance %> ETH </li>
    <li> <a href="/wallet/send?addr=<%= obj.address %>&bal=<%= obj.balance %>&acount=<%= obj.count %>">send</a> </li>
    <li> 
      <a href="/wallet/txs?addr=<%= obj.address %>">view tx history</a> 
    </li>
  </ul>
  </div>
  <br>
<% }) %>
 </div>



</div>
</div>

<%- include page_foot %>
